
<section class="py-5">
            <div class="container px-4 px-lg-5 mt-5">
                <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                   <% @products.each do |product| %>
                   
                    <div class="col mb-5">
                        <div class="card h-100">
                            <!-- Product image-->
                            <%if product.images.present?%>
                            <%= image_tag  (product.images.last.url) %>
                            
                            <%else%>
                            <img class="card-img-top" src="https://dummyimage.com/300x300/dee2e6/6c757d.jpg" alt="..." />
                            <%end%>
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder"><%=product.name%></h5>
                                    <!-- Product price-->
                                    $ <%=product.price%>
                                </div>
                            </div>
                   
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <%= link_to 'Add to cart', cart_item_path(:product_id => product.id), method: 'post', :class => 'btn btn-outline-dark mt-auto' %>
                            </div>
                        </div>
                    </div>
                     <%end%>
                </div>
            </div>
        </section>