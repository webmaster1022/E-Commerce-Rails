<style>
.sidebar {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  padding: 58px 0 0; /* Height of navbar */
  box-shadow: 0 2px 5px 0 rgb(0 0 0 / 5%), 0 2px 10px 0 rgb(0 0 0 / 5%);
  width: 240px;
  z-index: 600;
}

@media (max-width: 991.98px) {
  .sidebar {
    width: 100%;
  }
}
.sidebar .active {
  border-radius: 5px;
  box-shadow: 0 2px 5px 0 rgb(0 0 0 / 16%), 0 2px 10px 0 rgb(0 0 0 / 12%);
}

.sidebar-sticky {
  position: relative;
  top: 0;
  height: calc(100vh - 48px);
  padding-top: 0.5rem;
  overflow-x: hidden;
  overflow-y: auto; /* Scrollable contents if viewport is shorter than content. */
}
</style>
<!--Main Navigation-->
<header>
  <!-- Sidebar -->
  <nav id="sidebarMenu" class="collapse d-lg-block sidebar collapse bg-white">
    <div class="position-sticky">
        <h4 style="margin-left:35px"><b>ADMIN PANEL</b></h4>
      <div class="list-group list-group-flush mx-3 mt-4">
      
        <p
          href=""
          class="list-group-item list-group-item-action py-2 ripple dropdown-toggle">
          <i class="fas fa-tachometer-alt fa-fw me-3">Categories</i><span></span>
        </p>
        <div class="dropdown-menu1" style= "margin-left:10px; margin-bottom:15px">
          <%= link_to 'View Categories', admin_category_index_path , :class => 'list-group-item list-group-item-action py-2 ripple' %>
          <%= link_to 'Add Categories', new_admin_category_path , :class => 'list-group-item list-group-item-action py-2 ripple' %>
        </div>
        <p
          href=""
          class="list-group-item list-group-item-action py-2 ripple dropdown-toggle">
          <i class="fas fa-tachometer-alt fa-fw me-3">Products</i><span></span>
        </p>
        <div class="dropdown-menu1" style= "margin-left:10px; margin-bottom:15px">
          <%= link_to 'View Products', new_admin_product_path , :class => 'list-group-item list-group-item-action py-2 ripple' %>
          <%= link_to 'Add Products', new_admin_product_path , :class => 'list-group-item list-group-item-action py-2 ripple' %>
        </div>
        <a href="#" class="list-group-item list-group-item-action py-2 ripple">
          <i class="fas fa-chart-area fa-fw me-3"></i><span>Webiste traffic</span>
        </a>
        <a href="#" class="list-group-item list-group-item-action py-2 ripple"
          ><i class="fas fa-lock fa-fw me-3"></i><span>Password</span></a
        >
        <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'list-group-item list-group-item-action py-2 ripple'  %>
        </p>
      </div>
    </div>
  </nav>
  <!-- Sidebar -->
  <!-- Navbar -->
</header>
<!--Main Navigation-->

<!--Main layout-->
<main style="margin-top: 58px;">
  <div class="container pt-4"></div>
</main>
