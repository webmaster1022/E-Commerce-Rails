
<div class="container">
<div class="table-responsive"  style="padding-left:170px">
  <!--Table-->
  <table class="table table-striped" >

    <!--Table head-->
    <thead>
      <tr>
        <th>#</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Order id</th>
      <th>Status</th>
      <th>Actions<th>
      </tr>
    </thead>
    <!--Table head-->

    <!--Table body-->
    <tbody>
    <%x=1%>
    
    <% @orders.each do |order|%>
    <tr>
      <td><%=x%></td>
      <td><%=order.name%></td>
      <td><%=order.lastname%></td>
      <td><%=order.email%></td>
      <td><%=order.id%></td>
      <td><%=order.status%></td>
      <td><%= link_to 'View Order', order_path(order.id) , :class => 'btn btn-primary btn-block ', :style => 'margin:0 auto; color:white' %></td>
    </tr>
    <%x = x+1 %>
    <%end%>
    </tbody>
    <!--Table body-->
  </table>
  <!--Table-->
</div>
</div>
