<div class="container">
    <div class="py-5 text-center">
        <h2>Checkout form</h2>
    </div>
    <div class="row">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Your cart</span>
                <%totals = 0%>
                <span class="badge badge-secondary badge-pill"><%@cart.each do|cart|%>
                <%totals = (cart.quantity).to_i + totals%>
                <%end%>
                Items: <%=totals%>
                </span>
            </h4>
          
            <ul class="list-group mb-3 sticky-top">
            <%total = 0%>
            <% @cart.each do |cart| %>
            <%@product = cart.get_product(cart.product_id)%>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0"><%=@product.name%></h6>
                        <small class="text-muted">Quantity: <%=cart.quantity%></small>
                    </div>
                <span class="text-muted">$ <%=cart.get_price(@product) %> </span>
                    <%total = cart.get_price(@product) + total%>
                </li>
              <%end%>
                <li class="list-group-item d-flex justify-content-between">
                    <span>Total (USD)</span>
                    <strong>$ <%=total%></strong>
                </li>
            </ul>
        </div>
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Billing address</h4>
            <%= form_for(:order, as: @order , url: order_index_path ) do |f| %>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <%= f.label :name, 'First Name' %><br>
                        <%= f.text_field :name, required: true, autofocus: true, class: "form-control" %>
                        <div class="invalid-feedback"> Valid first name is required. </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <%= f.label :lastname , 'Last Name'%><br>
                        <%= f.text_field :lastname, required: true, autofocus: true, class: "form-control" %>
                        <div class="invalid-feedback"> Valid last name is required. </div>
                    </div>
                </div>
                <div class="mb-3">
                    <%= f.label :email %><br>
                    <%= f.email_field :email, class:"form-control" %>
                    <div class="invalid-feedback"> Please enter a valid email address for shipping updates. </div>
                </div>
                <div class="mb-3">
                    <%= f.label :address %><br>
                    <%= f.text_area :address, class:"form-control" %>
                    <div class="invalid-feedback"> Please enter your shipping address. </div>
                </div>
                <hr class="mb-4">
                <h4 class="mb-3">Payment</h4>
                <div class="d-block my-3">
                    <div class="custom-control custom-radio">
                       <%= f.radio_button :pay_method, 'cod', :checked => true %> 
                      <%= label :contactmethod_cod, 'Cash On Delivery' %>
                      <%= f.radio_button :pay_method, 'debit' %>
                      <%= label :contactmethod_debit, 'Debit/Credit Card' %>
                    </div>
                </div>
                <hr class="mb-4">
                <%= f.submit class:"btn btn-primary btn-lg btn-block" %>
                
            </form>
        </div>
    </div>
<% end %>